<% layout("./layouts/boilerplate.ejs") %>

<div class="row">
  <div class="col-8 offset-3">
    <h3>Listing Details :</h3>
  </div>

  <div class="card col-6 offset-3" >
    <img 
    src="<%= listing.image %>" 
    class="card-img-top show-img" 
    alt="listing_img"
    />

  <div class="card-body">
    <p class="card-text">
    <b><%= listing.title %></b>
    </p>
    <%= listing.description %></div>
    <b>&#8377; <%= listing.price.toLocaleString("en-IN") %></b>
    <%= listing.location %>,
    <%= listing.country %>
    
  </div>
  
</div>
<br />
<div class="btns">
  <a href="/listings/<%= listing._id %>/edit" class="btn offset-3">Edit</a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class=" btn dlt-btn offset-4">Delete</button>
    </form>
</div>
</div>
<br />

